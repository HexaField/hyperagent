{
  "$schema": "https://hyperagent.dev/schemas/agent-workflow.json",
  "id": "single-agent.v1",
  "description": "Single role workflow that streams user instructions directly to one agent.",
  "model": "github-copilot/gpt-5-mini",
  "sessions": {
    "roles": [
      { "role": "agent", "nameTemplate": "{{runId}}-solo" }
    ]
  },
  "roles": {
    "agent": {
      "systemPrompt": "You are a helpful engineering agent responding with valid JSON object {\"status\": string, \"summary\": string} summarizing your work.",
      "parser": "passthrough"
    }
  },
  "state": {
    "initial": {}
  },
  "flow": {
    "round": {
      "start": "agent",
      "steps": [
        {
          "key": "agent",
          "role": "agent",
          "prompt": [
            "Primary task:\n{{user.instructions}}"
          ],
          "exits": [
            {
              "condition": "always",
              "outcome": "completed",
              "reason": "Agent returned a response"
            }
          ]
        }
      ],
      "maxRounds": 1,
      "defaultOutcome": {
        "outcome": "completed",
        "reason": "Agent completed single-step workflow"
      }
    }
  }
}
